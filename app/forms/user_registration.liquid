---
name: user_registration
resource: User
fields:
  first_name:
    label: First Name
    value: Frank
  last_name:
    label: Last Name
    validation:
      presence: "{{form.fields.last_name.label}} must be provided"
  email:
    label: Email
  password:
    label: Password
  organization:
    label: Organization
    map: modules/company/organization.name
    validation:
      modules/organization/unique_name: "{{form.fields.organization.label}} name is already taken."
  user_id:
    label: User ID
    map: modules/company/organization.user_id
  country:
    label: Country
    value: 5
    options:
      - label: Canada
        value: 3
      - label: Poland
        value: 4
      - label: United States
        value: 5
payload: >
  {
    "first_name": "{{form.fields.first_name.value | default: form.fields.email.value}}",
    "user_id": "{{form.id}}"
  }
sync_callbacks:
  tasks:
  notifications:
  inline: >
async_callbacks:
  tasks:
  notificatins:
  inline: >
redirect_to:
---
